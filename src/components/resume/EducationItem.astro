---
// src/components/resume/EducationItem.astro
/**
 * Renders a single educational entry for the resume.
 *
 * @param {string} degree - The name of the degree or certification.
 * @param {string} institution - The name of the institution.
 * @param {string} date - The date range of the study period.
 * @param {string} [details] - Optional details, like approved subjects.
 */
interface Props {
  degree: string;
  institution: string;
  date: string;
  details?: string;
}

const { degree, institution, date, details } = Astro.props;
---

<div>
  <div class="flex justify-between items-start">
    <div>
      <h3 class="font-medium text-base">{degree}</h3>
      <p class="text-sm text-muted-foreground">{institution}</p>
      {details && <p class="text-xs text-muted-foreground mt-1">{details}</p>}
    </div>
    <p class="text-sm text-muted-foreground text-right min-w-[100px]">{date}</p>
  </div>
</div>