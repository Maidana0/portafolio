// src/components/resume/Navigation.astro
/**
 * Simple floating navigation component that adapts to both desktop and mobile.
 * Uses hover on desktop and touch/click on mobile with the same arrow design.
 */

import FloatingNavigation from "./NavigationMenu";

// Simple navigation items array
const navigationItems = [
  { name: "Perfil", href: "#profile" },
  { name: "Experiencia", href: "#experience" },
  { name: "Educaci√≥n", href: "#education" },
  { name: "Habilidades", href: "#skills" },
  { name: "Competencias", href: "#soft-skills" },
];
---

<FloatingNavigation 
  client:load
  items={navigationItems}
/>

<style>
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Section targeting */
  [id] {
    scroll-margin-top: 2rem;
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    [id] {
      scroll-margin-top: 1rem;
    }
    
    .fixed.right-0 {
      right: 0.5rem;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      transition-duration: 0.01ms !important;
    }
    
    html {
      scroll-behavior: auto;
    }
  }
</style>