---
import "@styles/global.css";
import ThemeSelector from "@components/common/layout/ThemeSelector.astro";
import SidebarProvider from "@providers/sidebar-provider";
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html lang="es" data-theme="maidana">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content="{Astro.generator}" />
    <title>Franco Maidana - Portfolio</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <ViewTransitions />
  </head>

  <body>
    <SidebarProvider currentPath={Astro.url.pathname} client:load>
      <ThemeSelector slot="headerSlot" />

      <main>
        <slot />
      </main>

      <footer class="p-4 text-center mt-auto" slot="footerSlot">
        <span
          class="text-sm p-1 text-muted-foreground group-data-[collapsible=icon]:hidden"
        >
          Â© {new Date().getFullYear()} Franco Maidana
        </span>
      </footer>
    </SidebarProvider>
  </body><style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</html>
