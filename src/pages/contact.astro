---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="p-6">
    <h1 class="text-3xl font-bold mb-6">Contacto</h1>
    <div class="max-w-md space-y-4">
      <div class="space-y-2">
        <label class="text-sm font-medium" for="name">Nombre</label>
        <input 
          id="name"
          type="text" 
          class="w-full px-3 py-2 border border-input rounded-md bg-background"
          placeholder="Tu nombre"
        />
      </div>
      <div class="space-y-2">
        <label class="text-sm font-medium" for="email">Email</label>
        <input 
          id="email"
          type="email" 
          class="w-full px-3 py-2 border border-input rounded-md bg-background"
          placeholder="tu@email.com"
        />
      </div>
      <div class="space-y-2">
        <label class="text-sm font-medium" for="message">Mensaje</label>
        <textarea 
          id="message"
          rows="4" 
          class="w-full px-3 py-2 border border-input rounded-md bg-background"
          placeholder="Tu mensaje"
        ></textarea>
      </div>
      <button class="w-full bg-primary text-primary-foreground px-4 py-2 rounded-md hover:bg-primary/90">
        Enviar mensaje
      </button>
    </div>
  </div>
</Layout>