---
import Layout from "@layouts/Layout.astro";
import { aboutContent } from "@lib/content";
// import { Image } from "astro:assets";
import { Button } from "@components/ui/button";
// import { Badge } from "@components/ui/badge";
import {
  MessageSquare,
  Award,
  BookOpen,
  Code,
  Dumbbell,
  GraduationCap,
  Heart,
  Rocket,
} from "lucide-astro";
import Navigation from "@components/resume/Navigation.astro";

const navigationItems = [
  { name: aboutContent.hero.name, href: "#hero" },
  { name: aboutContent.story.title, href: "#story" },
  { name: aboutContent.academics.title, href: "#academics" },
  { name: aboutContent.achievements.title, href: "#achievements" },
  { name: aboutContent.philosophy.title, href: "#philosophy" },
  { name: aboutContent.funFacts.title, href: "#fun-facts" },
  { name: aboutContent.cta.title, href: "#cta" },
];
---

<Layout>
  <Navigation items={navigationItems} />
  <div class="container mx-auto p-6 md:p-12 space-y-24 md:space-y-32">
    <!-- 1. Hero Section -->

    <section id="hero" class="text-center">
      <h1
        class="text-5xl md:text-7xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary"
      >
        {aboutContent.hero.name}
      </h1>
      <p class="text-lg md:text-xl text-muted-foreground mb-2">
        {aboutContent.hero.role}
      </p>
      <p class="text-sm text-muted-foreground mb-6">
        {aboutContent.hero.origin}
      </p>
      <div
        class="w-32 h-32 rounded-full bg-base-300 mx-auto mb-6 flex items-center justify-center"
      >
        <span class="text-xs text-muted-foreground">Avatar</span>
      </div>
      <p class="text-xl md:text-2xl max-w-3xl mx-auto font-light">
        {aboutContent.hero.tagline}
      </p>
    </section>

    <!-- 2. Personal Story -->

    <section id="story">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
        {aboutContent.story.title}
      </h2>
      <article
        class="prose prose-lg lg:prose-xl dark:prose-invert mx-auto text-center space-y-4"
      >
        {aboutContent.story.paragraphs.map((p: string) => <p>{p}</p>)}
      </article>
    </section>

    <!-- 3. Academic Background -->

    <section id="academics">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
        {aboutContent.academics.title}
      </h2>
      <div class="max-w-4xl mx-auto space-y-8">
        <div class="flex flex-col md:flex-row gap-8">
          {
            aboutContent.academics.education.map(
              (edu: {
                degree: string;
                institution: string;
                Icon: typeof Rocket;
              }) => {
                const IconComponent =
                  edu.Icon === aboutContent.academics.education[0].Icon
                    ? GraduationCap
                    : Dumbbell;
                return (
                  <div class="card bg-base-200 flex-1">
                    <div class="card-body items-center text-center">
                      <IconComponent class="w-10 h-10 mb-4 text-primary" />
                      <h3 class="card-title">{edu.degree}</h3>
                      <p>{edu.institution}</p>
                    </div>
                  </div>
                );
              }
            )
          }
        </div>
        <p class="text-center text-muted-foreground italic max-w-3xl mx-auto">
          {aboutContent.academics.description}
        </p>
      </div>
    </section>

    <!-- 4. Achievements -->

    <section id="achievements">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
        {aboutContent.achievements.title}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          aboutContent.achievements.items.map(
            (
              item: {
                Icon: typeof Rocket;
                title: string;
                description: string;
              },
              index: number
            ) => {
              const icons = [Award, Rocket, BookOpen, Code];
              const IconComponent = icons[index];
              return (
                <div class="card bg-base-200 shadow-lg">
                  <div class="card-body">
                    <div class="flex items-center gap-4">
                      <IconComponent class="w-8 h-8 text-primary" />
                      <div>
                        <h3 class="card-title">{item.title}</h3>
                        <p class="text-base-content/70">{item.description}</p>
                      </div>
                    </div>
                  </div>
                </div>
              );
            }
          )
        }
      </div>
    </section>

    <!-- 5. Values & Philosophy -->

    <section id="philosophy">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
        {aboutContent.philosophy.title}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          aboutContent.philosophy.values.map(
            (value: { title: string; description: string }) => (
              <div class="card bg-base-200 text-center">
                <div class="card-body">
                  <h3 class="card-title justify-center">{value.title}</h3>
                  <p class="text-base-content/70">"{value.description}"</p>
                </div>
              </div>
            )
          )
        }
      </div>
    </section>

    <!-- 6. Fun Facts -->

    <section id="fun-facts" class="text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-8">
        {aboutContent.funFacts.title}
      </h2>
      <div class="flex flex-wrap justify-center items-center gap-8">
        {
          aboutContent.funFacts.facts.map(
            (fact: { Icon: typeof Rocket; text: string }, index: number) => {
              const icons = [Heart, Dumbbell, BookOpen];
              const IconComponent = icons[index];
              return (
                <div class="flex items-center gap-3 p-3 bg-base-200 rounded-box">
                  <IconComponent class="w-6 h-6 text-primary" />
                  <span>{fact.text}</span>
                </div>
              );
            }
          )
        }
      </div>
    </section>

    <!-- 7. Call-to-Action -->

    <section id="cta" class="text-center bg-base-200 p-8 md:p-16 rounded-box">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        {aboutContent.cta.title}
      </h2>
      <p class="text-lg text-muted-foreground mb-8 max-w-2xl mx-auto">
        {aboutContent.cta.description}
      </p>
      <a href="/contact">
        <Button size="lg" className="btn-primary">
          <MessageSquare className="w-5 h-5 mr-2" />
          {aboutContent.cta.buttonText}
        </Button>
      </a>
    </section>
  </div>
</Layout>
